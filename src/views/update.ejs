<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/card">Card</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <div>

        <div class="create-user-content">
            <b>Create a new user:</b>
            <form action="/update-user-DB/<%= dataUser[0].id %>" method="POST">
                <div>
                    <label>Frist name:</label><br>
                    <input type="text" name="fristName" value="<%= dataUser[0].fistName %>"/>
                </div>
                <div>
                    <label>Last name:</label><br>
                    <input type="text" name="lastName" value="<%= dataUser[0].lastName %>"/>
                </div>
                <div>
                    <label>Email:</label><br>
                    <input type="email" name="email" value="<%= dataUser[0].email %>"/>
                </div>
                <div>
                    <label>Address:</label><br>
                    <input type="text" name="address" value="<%= dataUser[0].address %>"/>
                </div>
                <button type="submit" class="submit-btn">Submit</button>
            </form>
        </div>
    </div>

</body>

</html>